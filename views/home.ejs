<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="../assets/css/home.css">
  <link rel="stylesheet" href="../assets/css/scrollBar.css">
  <title>Home</title>
</head>
<body>
  <div class="navbar">
    <div class="navbar__content">
      <p class="navbar__content--modifier">PR-Qu Apps</p>
    </div>
    <div class="navbar__content">
      <p class="navbar__content--modifier" onclick="profile()"><%= user.username %></p>
    </div>
    <div class="navbar__content logout">
      <p class="navbar__content--modifier" onclick="logout()">Log Out</p>
    </div>
  </div>
  <form action="/todo/<%= user.username %>/tambah" method="post">
  <div class="header">
    <div class="header__title">
      <h1>What are you going to do ?</h1>
    </div>
    <div class="header__input">
      <div class="header__inputBox">
        <input type="text" name="judul" id="" class="header__input--modifier" placeholder="Title" required autofocus spellcheck="false" autocomplete="off">
      </div>
      <div class="header__inputBox">
        <input type="text" name="desc" id="" class="header__input--modifier" placeholder="Description" required spellcheck="false" autocomplete="off">
      </div>
      <div class="header__inputBox">
        <input type="date" name="deadline" id="" class="header__input--modifier" placeholder="Deadline" required>
      </div>
    </div>
    <div class="header__button">
      <button type="submit" class="header__button--modifier">Submit your to-do-list</button>
    </div>
  </div>
  </form>
  <div class="home__content">
    <div class="home__title">
      <div class="home__titleContent">
        <p class="home__titleContent--modifier">Title</p>
      </div>
      <div class="home__titleContent">
        <p class="home__titleContent--modifier">Description</p>
      </div>
      <div class="home__titleContent">
        <p class="home__titleContent--modifier">Deadline</p>
      </div>
    </div>
    <% todo.forEach(function(todo){ %>
    <form action="/todo/hapus/<%= todo.id_todo %>?_method=DELETE" method="POST">
    <div class="todo__container" id="todo__container">
      <div class="todo__wrapper">
        <div class="todo__title">
          <p class="todo__content--modifier"><%= todo.nama_todo %></p>
        </div>
        <div class="todo__description">
          <p class="todo__content--modifier"><%= todo.description %></p>
        </div>
        <div class="todo__deadline">
          <p class="todo__content--modifier"><%= todo.deadline %></p>
        </div>
      </div>
      <div class="deleteBox" id="deleteBox">
        <a href="/hapus/<%= todo.id_todo %>?_method=DELETE">
          <img src="../assets/icons/dustbin.svg" alt="" class="deleteIcons">
        </a>
      </div>
      <div class="deleteBox2">
        <button class="deleteButton">Done</button>
      </div>
    </div>
    </form>
    <% }) %>
  </div>
  <div class="home__contentResponsive">
    <div class="home__contentResponsiveHeader">
      <h2 class="home__contentResponsiveHeader--modifier">Your to-do-list</h2>
    </div>
    <% todo.forEach(function(todo){ %>
      <form action="/todo/hapus/<%= todo.id_todo %>?_method=DELETE" method="POST">
        <div class="home__contentResponsiveContainer">
          <div class="home__contentResponsiveTitle" onclick="dropDown(<%= todo.id_todo %>)">
            <p class="home__contentResponsiveTitle--modifier"><%= todo.nama_todo %></p>
          </div>
          <div class="home__contentResponsiveDescriptionWrapper">
          <div class="home__contentResponsiveDetails" id="home__contentResponsiveDetails<%= todo.id_todo %>">
              <div class="home__contentResponsiveDescription">
                <p class="home__contentResponsiveDescription--modifier"><%= todo.description %></p>
              </div>
              <div class="home__contentResponsiveDeadline">
                <p class="home__contentResponsiveDeadline--modifier"><%= todo.deadline %></p>
              </div>
              <div class="home__contentResponsiveButton">
                <button class="deleteButton">Done</button>
              </div>
          </div>
          </div>
        </div>
      </form>
    <% }) %>
  </div>
</body>
<script src="../assets/js/button.js"></script>
<script src="../assets/js/home.js"></script>
</html>
